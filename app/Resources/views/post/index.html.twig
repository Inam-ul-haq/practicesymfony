<style> 
   .table { border-collapse: collapse; } 
   .table th, td  {
      border-bottom: 1px solid #ddd; 
      width: 250px; 
      text-align: left; 
      align: left; 
   }
.add {
      margin-left: 660px;
      width: 100px;
      color: blue;
      height: 32px;
      background: beige;
}
</style> 

<h2> Get Data from the DataBase </h2>
<button class="add"><a href="{{ path('studentpage') }}"> Add</a></button>

<table class = "table">  
   <tr>  
      <th>Name</th>  
      <th>Address</th>
      <th>Edit  /delete</th>


   </tr>  
   {% for x in data %} 
   <tr>  
      <td>{{ x.Name }}</td>   
      <td>{{ x.Address }}</td>
      <td><a href="{{ path('updatepost', {'id':  x.Id  }) }}">Edit</a> | <a href="{{ path('deletepost', {'id':  x.Id  }) }}">Delete</a><hr /></td>

   </tr>  
   {% endfor %} 
</table> 
